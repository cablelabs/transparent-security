---

# IP values must be the third address in an IPv4 /30 CIDR block for running CI
hosts:
  host1:
    name: host1
    id: 2
    ip: 192.168.1.2
{% if host_user is defined %}
    user: {{ host_user }}
{% endif %}
    public_ip: {{ host1_ip }}
    tun1_ip: {{ host1_tun1_ip }}
    tun1_mac: {{ host1_tun1_mac }}
    tunnels:
      - host: aggregate
    ipv6: 0000:0000:0000:0000:0000:0001:0001:0002
    ip_port: any
    mac: 00:00:00:00:01:01
    type: webcam
  host2:
    name: host2
    id: 3
    ip: 192.168.1.6
{% if host_user is defined %}
    user: {{ host_user }}
{% endif %}
    public_ip: {{ host2_ip }}
    tun1_ip: {{ host2_tun1_ip }}
    tun1_mac: {{ host2_tun1_mac }}
    tunnels:
      - host: aggregate
    ipv6: 0000:0000:0000:0000:0000:0001:0001:0003
    ip_port: any
    mac: 00:00:00:00:01:02
    type: nas
  inet:
    name: inet
    id: 4
    ip: 192.168.1.10
{% if host_user is defined %}
    user: {{ host_user }}
{% endif %}
    public_ip: {{ inet_ip }}
    tun1_ip: {{ inet_tun1_ip }}
    tun1_mac: {{ inet_tun1_mac }}
    tunnels:
      - host: core
    ipv6: 0000:0000:0000:0000:0000:0001:0001:0003
    ip_port: any
    mac: 00:00:00:00:01:02
    type: nas
  ae:
    name: ae
    id: 13
    ip: 10.0.1.9
{% if ae_user is defined or host_user is defined %}
    user: {{ ae_user | default(host_user) }}
{% endif %}
    public_ip: {{ ae_ip }}
    tun1_ip: {{ ae_tun1_ip }}
    tun1_mac: {{ ae_tun1_mac }}
    tunnels:
      - host: core
    ipv6: 0000:0000:0000:0000:0000:0002:0001:0003
    ip_port: any
    mac: 00:00:00:00:05:08
    type: server
switches:
  aggregate:
    name: aggregate
    id: 0
    int_id: 123
    runtime_p4info: {{ remote_scripts_dir }}/p4/aggregate.tofino/p4info.pb.txt
    tofino_bin: {{ remote_scripts_dir }}/p4/aggregate.tofino/pipe/tofino.bin
    ctx_json: {{ remote_scripts_dir }}/p4/aggregate.tofino/pipe/context.json
    ip: {{ agg_ip }}
{% if switch_user is defined %}
    user: {{ switch_user }}
{% endif %}
    tun1_ip: {{ agg_tun1_ip }}
    tun1_mac: {{ agg_tun1_mac }}
    type: aggregate
    arch: {{ p4_arch }}
    mac: 00:00:00:02:04:00
    grpc: {{ agg_ip }}:{{ grpc_port }}
    ipv6_term_host: inet
    multicast_entries:
    tunnels:
      - host: core
        switch_port: 1
      - host: host1
        switch_port: 2
      - host: host2
        switch_port: 3
  core:
    name: core
    id: 0
    int_id: 234
    runtime_p4info: {{ remote_scripts_dir }}/p4/core.tofino/p4info.pb.txt
    tofino_bin: {{ remote_scripts_dir }}/p4/core.tofino/pipe/tofino.bin
    ctx_json: {{ remote_scripts_dir }}/p4/core.tofino/pipe/context.json
    ip: {{ core_ip }}
{% if switch_user is defined %}
    user: {{ switch_user }}
{% endif %}
    tun1_ip: {{ core_tun1_ip }}
    tun1_mac: {{ core_tun1_mac }}
    clone_egress: 3
    telemetry_rpt:
      type: host
      name: ae
    type: core
    arch: {{ p4_arch }}
    tunnels:
      - host: aggregate
        switch_port:  1
      - host: inet
        switch_port:  2
      - host: ae
        switch_port:  3
    mac: 00:00:00:03:05:00
    grpc: {{ core_ip }}:{{ grpc_port }}
    ipv6_term_host: inet
    multicast_entries:
      - egress_port: 1
        instance: 1
      - egress_port: 2
        instance: 1
      - egress_port: 3
        instance: 1
