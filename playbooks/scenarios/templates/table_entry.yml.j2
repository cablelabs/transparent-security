# Jinja2 template for use as an input to insert_p4_table_entry.py
---
- table_name: {{ p4_ingress_name }}.{{ table_name }}
{% if action_name or action_name != '' %}
  action_name: {{ p4_ingress_name }}.{{ action_name }}
{%  endif %}
{% if match_fields %}
  match_fields:
{% for match_field in match_fields %}
    {{ match_field.key }}: {{ match_field.value }}
{% endfor %}
{%  endif %}
{% if action_params %}
  action_params:
{% for action_param in action_params %}
    {{ action_param.key }}: {{ action_param.value }}
{% endfor %}
{%  endif %}
