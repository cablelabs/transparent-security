---
{{ topo_dict.switches['gateway1'].name }}:
  - destination: {{ topo_dict.hosts['inet'].ip }}
    interface: {{ topo_dict.switches['gateway1'].name }}-eth4
    packet_count: 25
    interval: 3
{{ topo_dict.switches['gateway2'].name }}:
  - destination: {{ topo_dict.hosts['inet'].ip }}
    interface: {{ topo_dict.switches['gateway2'].name }}-eth3
    packet_count: 25
    interval: 3
{{ topo_dict.switches['gateway3'].name }}:
  - destination: {{ topo_dict.hosts['inet'].ip }}
    interface: {{ topo_dict.switches['gateway3'].name }}-eth3
    packet_count: 25
    interval: 3
