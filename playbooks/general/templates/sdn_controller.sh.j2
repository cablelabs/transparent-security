-t {{ topo_file_loc }} \
-f {{ log_dir }}/sdn.log \
-ld {{ log_dir }} \
-s {{ remote_scripts_dir }}/p4 \
-p {{ p4_platform }} \
-hsp {{ sdn_port }} \
-lp {{ load_p4 | default('True') }}